<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="isLoading"
            type="Boolean" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.RegisterFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.iitr.kaishu.nsidedprogressbar.NSidedProgressBar
                android:id="@+id/pBar"
                style="@style/ProgressBar"
                android:visibility="@{isLoading ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:text="@string/register"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/email_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:background="@drawable/text_field"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:padding="7dp"
                android:visibility="@{isLoading ? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <EditText
                android:id="@+id/pass_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/text_field"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="7dp"
                android:visibility="@{isLoading ? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toEndOf="@+id/email_field"
                app:layout_constraintStart_toStartOf="@+id/email_field"
                app:layout_constraintTop_toBottomOf="@+id/email_field" />

            <Button
                android:id="@+id/register_button"
                style="@style/GreenButton"
                android:layout_marginTop="45dp"
                android:text="@string/register"
                android:visibility="@{isLoading ? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toEndOf="@+id/pass_field"
                app:layout_constraintStart_toStartOf="@+id/pass_field"
                app:layout_constraintTop_toBottomOf="@+id/pass_field" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>
</layout>
